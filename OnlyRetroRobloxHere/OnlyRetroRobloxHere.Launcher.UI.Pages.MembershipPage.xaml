<?xml version="1.0" encoding="utf-8"?>
<local:BasePage x:Class="OnlyRetroRobloxHere.Launcher.UI.Pages.MembershipPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:controls="clr-namespace:OnlyRetroRobloxHere.Launcher.UI.Controls" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:OnlyRetroRobloxHere.Launcher.UI.Pages" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:viewmodels="clr-namespace:OnlyRetroRobloxHere.Launcher.UI.ViewModels.Pages" Title="MembershipPage" FontFamily="Verdana" TextOptions.TextFormattingMode="Display">
  <FrameworkElement.Resources>
    <ResourceDictionary>
      <Storyboard x:Key="OBCFadeIn" Duration="00:00:02">
        <DoubleAnimation BeginTime="00:00:00" Storyboard.TargetName="RegularMembershipGrid" Storyboard.TargetProperty="Opacity" From="1.0" To="0.0" Duration="00:00:01" />
        <ObjectAnimationUsingKeyFrames BeginTime="00:00:01" Storyboard.TargetName="RegularMembershipGrid" Storyboard.TargetProperty="Visibility">
          <DiscreteObjectKeyFrame Value="{x:Static Visibility.Collapsed}" />
        </ObjectAnimationUsingKeyFrames>
        <ObjectAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="OutrageousMembershipGrid" Storyboard.TargetProperty="Visibility">
          <DiscreteObjectKeyFrame Value="{x:Static Visibility.Visible}" />
        </ObjectAnimationUsingKeyFrames>
        <DoubleAnimation BeginTime="00:00:01" Storyboard.TargetName="OutrageousMembershipGrid" Storyboard.TargetProperty="Opacity" From="0.0" To="1.0" Duration="00:00:01" />
      </Storyboard>
      <Storyboard x:Key="OBCFadeOut" Duration="00:00:02">
        <DoubleAnimation BeginTime="00:00:00" Storyboard.TargetName="OutrageousMembershipGrid" Storyboard.TargetProperty="Opacity" From="1.0" To="0.0" Duration="00:00:01" />
        <ObjectAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="OutrageousMembershipGrid" Storyboard.TargetProperty="Visibility">
          <DiscreteObjectKeyFrame Value="{x:Static Visibility.Collapsed}" />
        </ObjectAnimationUsingKeyFrames>
        <ObjectAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="RegularMembershipGrid" Storyboard.TargetProperty="Visibility">
          <DiscreteObjectKeyFrame Value="{x:Static Visibility.Visible}" />
        </ObjectAnimationUsingKeyFrames>
        <DoubleAnimation BeginTime="00:00:01" Storyboard.TargetName="RegularMembershipGrid" Storyboard.TargetProperty="Opacity" From="0.0" To="1.0" Duration="00:00:01" />
      </Storyboard>
      <Style x:Key="NothingButton" BasedOn="{StaticResource ButtonNoEffects}" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="#00FFFFFF" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="0" />
      </Style>
    </ResourceDictionary>
  </FrameworkElement.Resources>
  <Grid Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <controls:StandardBox Grid.Row="0" HeaderVisibility="Collapsed">
      <Grid>
        <Grid Name="RegularMembershipGrid" Visibility="Visible">
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
          </Grid.RowDefinitions>
          <Grid Row="0" Margin="0,0,0,4">
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock Margin="0,0,0,6" FontSize="20" FontStyle="Italic" FontWeight="Bold" Foreground="#6E99C9" Text="Builders Club" />
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
              <Button Width="28" Height="28" Margin="0,0,4,0" Padding="0" HorizontalAlignment="Right" Background="#00FFFFFF" BorderThickness="0" SnapsToDevicePixels="True" Style="{StaticResource ButtonNoEffects}" Tag="None" Click="MembershipButton_Click">
                <Image RenderOptions.BitmapScalingMode="HighQuality" Source="pack://application:,,,/OnlyRetroRobloxHere;component/Resources/Membership/None.png" />
              </Button>
              <Button Width="28" Height="28" Margin="0" Padding="0" HorizontalAlignment="Right" Background="#00FFFFFF" BorderThickness="0" SnapsToDevicePixels="True" Style="{StaticResource ButtonNoEffects}" Click="OBCOpenButton_Click">
                <Image RenderOptions.BitmapScalingMode="HighQuality" Source="pack://application:,,,/OnlyRetroRobloxHere;component/Resources/Membership/Page/OBCIcon.png" />
              </Button>
            </StackPanel>
            <ItemsControl Grid.Row="1">
              <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                  <UniformGrid Columns="4" Rows="1" />
                </ItemsPanelTemplate>
              </ItemsControl.ItemsPanel>
              <controls:ImageButton Click="MembershipButton_Click" Width="127" Height="94" DisabledImage="pack://application:,,,/OnlyRetroRobloxHere;component/Resources/Membership/Page/BC_Monthly_Disabled.png" Image="pack://application:,,,/OnlyRetroRobloxHere;component/Resources/Membership/Page/BC_Monthly.png" SnapsToDevicePixels="True" Style="{StaticResource NothingButton}" Tag="BCMonthly" IsEnabled="{Binding Path=BCMonthlyEnabled, Mode=OneWay}">
                <Image />
              </controls:ImageButton>
              <controls:ImageButton Click="MembershipButton_Click" Width="127" Height="94" DisabledImage="pack://application:,,,/OnlyRetroRobloxHere;component/Resources/Membership/Page/BC_6Months_Disabled.png" Image="pack://application:,,,/OnlyRetroRobloxHere;component/Resources/Membership/Page/BC_6Months.png" SnapsToDevicePixels="True" Style="{StaticResource NothingButton}" Tag="BC6Months" IsEnabled="{Binding Path=BC6MonthsEnabled, Mode=OneWay}">
                <Image />
              </controls:ImageButton>
              <controls:ImageButton Click="MembershipButton_Click" Width="127" Height="94" DisabledImage="pack://application:,,,/OnlyRetroRobloxHere;component/Resources/Membership/Page/BC_12Months_Disabled.png" Image="pack://application:,,,/OnlyRetroRobloxHere;component/Resources/Membership/Page/BC_12Months.png" SnapsToDevicePixels="True" Style="{StaticResource NothingButton}" Tag="BC12Months" IsEnabled="{Binding Path=BC12MonthsEnabled, Mode=OneWay}">
                <Image />
              </controls:ImageButton>
              <controls:ImageButton Click="MembershipButton_Click" Width="127" Height="94" DisabledImage="pack://application:,,,/OnlyRetroRobloxHere;component/Resources/Membership/Page/BC_Lifetime_Disabled.png" Image="pack://application:,,,/OnlyRetroRobloxHere;component/Resources/Membership/Page/BC_Lifetime.png" SnapsToDevicePixels="True" Style="{StaticResource NothingButton}" Tag="BCLifetime" IsEnabled="{Binding Path=BCLifetimeEnabled, Mode=OneWay}">
                <Image />
              </controls:ImageButton>
            </ItemsControl>
          </Grid>
          <Grid Row="1">
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock Margin="0,0,0,6" FontSize="20" FontStyle="Italic" FontWeight="Bold" Foreground="#6E99C9">
              <TextBlock Foreground="#FF72942E" Text="Turbo" /> Builders Club</TextBlock>
            <ItemsControl Grid.Row="1">
              <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                  <UniformGrid Columns="4" Rows="1" />
                </ItemsPanelTemplate>
              </ItemsControl.ItemsPanel>
              <controls:ImageButton Click="MembershipButton_Click" Width="127" Height="94" DisabledImage="pack://application:,,,/OnlyRetroRobloxHere;component/Resources/Membership/Page/TBC_Monthly_Disabled.png" Image="pack://application:,,,/OnlyRetroRobloxHere;component/Resources/Membership/Page/TBC_Monthly.png" SnapsToDevicePixels="True" Style="{StaticResource NothingButton}" Tag="TBCMonthly" IsEnabled="{Binding Path=TBCMonthlyEnabled, Mode=OneWay}">
                <Image />
              </controls:ImageButton>
              <controls:ImageButton Click="MembershipButton_Click" Width="127" Height="94" DisabledImage="pack://application:,,,/OnlyRetroRobloxHere;component/Resources/Membership/Page/TBC_6Months_Disabled.png" Image="pack://application:,,,/OnlyRetroRobloxHere;component/Resources/Membership/Page/TBC_6Months.png" SnapsToDevicePixels="True" Style="{StaticResource NothingButton}" Tag="TBC6Months" IsEnabled="{Binding Path=TBC6MonthsEnabled, Mode=OneWay}">
                <Image />
              </controls:ImageButton>
              <controls:ImageButton Click="MembershipButton_Click" Width="127" Height="94" DisabledImage="pack://application:,,,/OnlyRetroRobloxHere;component/Resources/Membership/Page/TBC_12Months_Disabled.png" Image="pack://application:,,,/OnlyRetroRobloxHere;component/Resources/Membership/Page/TBC_12Months.png" SnapsToDevicePixels="True" Style="{StaticResource NothingButton}" Tag="TBC12Months" IsEnabled="{Binding Path=TBC12MonthsEnabled, Mode=OneWay}">
                <Image />
              </controls:ImageButton>
              <controls:ImageButton Click="MembershipButton_Click" Width="127" Height="94" DisabledImage="pack://application:,,,/OnlyRetroRobloxHere;component/Resources/Membership/Page/TBC_Lifetime_Disabled.png" Image="pack://application:,,,/OnlyRetroRobloxHere;component/Resources/Membership/Page/TBC_Lifetime.png" SnapsToDevicePixels="True" Style="{StaticResource NothingButton}" Tag="TBCLifetime" IsEnabled="{Binding Path=TBCLifetimeEnabled, Mode=OneWay}">
                <Image />
              </controls:ImageButton>
            </ItemsControl>
          </Grid>
        </Grid>
        <Grid Name="OutrageousMembershipGrid" Visibility="Collapsed">
          <StackPanel>
            <Grid>
              <TextBlock Margin="0,0,0,10" FontSize="20" FontStyle="Italic" FontWeight="Bold" Foreground="#6E99C9" Text="Outrageous Builders Club" />
              <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button Width="28" Height="28" Margin="0" Padding="0" HorizontalAlignment="Right" Background="#00FFFFFF" BorderThickness="0" SnapsToDevicePixels="True" Style="{StaticResource ButtonNoEffects}" Click="OBCCloseButton_Click">
                  <Image RenderOptions.BitmapScalingMode="HighQuality" Source="pack://application:,,,/OnlyRetroRobloxHere;component/Resources/Membership/BuildersClub.png" />
                </Button>
              </StackPanel>
            </Grid>
            <TextBlock Margin="0,0,0,10" Style="{StaticResource TextBlockWhite}">You’ve stumbled onto a secret little bit of our site: Outrageous Builders Club.</TextBlock>
            <TextBlock Margin="0,0,0,10" Style="{StaticResource TextBlockWhite}" TextWrapping="Wrap">A while back the entire ROBLOX Team was eating lunch. Then Builderman spoke, “Some of our longer-term members are looking for a bigger Builders Club – bigger monthly allowances, more groups, more gear, and LOTS of places to build. Let us create such a club together. We will skin the site in carbon fiber for these users. We will give them piles of ROBUX. And finally, we will host a monthly web cast, taking their questions and feedback. We will call it “Outrageous Builders Club.”</TextBlock>
            <TextBlock Margin="0,0,0,10" Style="{StaticResource TextBlockWhite}">We thought for a second. Yes, we decided. That would be outrageous – outrageously awesome.</TextBlock>
            <Image Width="200" Height="100" Margin="0,0,0,5" SnapsToDevicePixels="True" Source="pack://application:,,,/OnlyRetroRobloxHere;component/Resources/Membership/Page/OBC_Monthly.png" />
            <controls:ImageButton Click="MembershipButton_Click" Width="74" Height="29" DisabledImage="pack://application:,,,/OnlyRetroRobloxHere;component/Resources/Membership/Page/UpgradeButtonDisabled.png" Image="pack://application:,,,/OnlyRetroRobloxHere;component/Resources/Membership/Page/UpgradeButton.png" SnapsToDevicePixels="True" Style="{StaticResource NothingButton}" Tag="OBCMonthly" IsEnabled="{Binding Path=OBCMonthlyEnabled, Mode=OneWay}">
              <Image />
            </controls:ImageButton>
          </StackPanel>
        </Grid>
      </Grid>
    </controls:StandardBox>
    <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Bottom">
      <TextBlock Grid.Row="1" Margin="0,0,0,2" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="20" Style="{StaticResource TextBlockWhite}" Text="{Binding DebtText, Mode=OneWay}" />
      <Image SnapsToDevicePixels="True" Stretch="None" Source="{Binding Path=AdSource, Mode=OneWay}" />
    </StackPanel>
  </Grid>
</local:BasePage>