<?xml version="1.0" encoding="utf-8"?>
<local:BasePage x:Class="OnlyRetroRobloxHere.Launcher.UI.Pages.AboutPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:controls="clr-namespace:OnlyRetroRobloxHere.Launcher.UI.Controls" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:OnlyRetroRobloxHere.Launcher.UI.Pages" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:viewmodels="clr-namespace:OnlyRetroRobloxHere.Launcher.UI.ViewModels.Pages" Title="AboutPage" FontFamily="Verdana" TextOptions.TextFormattingMode="Display">
  <StackPanel>
    <Grid ZIndex="2">
      <Image Height="100" RenderOptions.BitmapScalingMode="HighQuality" Source="{Binding Path=BannerSource, Mode=OneTime}" />
      <controls:SnowfallCanvas x:Name="Snowfall" Height="100" EmissionRate="5" LeaveAnimation="Fade" OpacityFactor="0.5" ParticleSpeed="1" Visibility="{Binding Path=SnowfallVisibility, Mode=OneTime}" />
    </Grid>
    <Border Height="10" Margin="0,-1,0,0" UseLayoutRounding="True">
      <Border.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
          <GradientStop Offset="0" Color="#477594" />
          <GradientStop Offset="0.5" Color="#0A477594" />
          <GradientStop Offset="1" Color="#00477594" />
        </LinearGradientBrush>
      </Border.Background>
    </Border>
    <TextBlock Margin="0,0,0,5" Style="{StaticResource TextBlockWhite}" TextAlignment="Center" Text="{Binding Path=Version, Converter={StaticResource StringFormatConverter}, ConverterParameter=Version {0}, Mode=OneTime}" />
    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
      <Button Background="#00FFFFFF" BorderThickness="0" Style="{StaticResource ButtonNoEffects}" Click="OnGithubIconClicked">
        <Image Width="40" RenderOptions.BitmapScalingMode="HighQuality" Source="pack://application:,,,/OnlyRetroRobloxHere;component/Resources/Socials/Github/github-mark-white.png" />
      </Button>
      <Button Margin="10,0,0,0" Background="#00FFFFFF" BorderThickness="0" Style="{StaticResource ButtonNoEffects}" Click="OnDiscordIconClicked">
        <Image Height="30" RenderOptions.BitmapScalingMode="HighQuality" Source="pack://application:,,,/OnlyRetroRobloxHere;component/Resources/Socials/Discord/discord-mark-white.png" />
      </Button>
    </StackPanel>
    <TextBlock FontSize="24" FontWeight="Bold" Style="{StaticResource TextBlockRed}" Text="Distributing private builds of ORRbxH is prohibited." TextAlignment="Center" Visibility="{Binding Path=PrivateVersionWarningVisibility, Mode=OneTime}" />
    <Grid Margin="10">
      <Grid.RowDefinitions>
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>
      <controls:StandardBox Grid.Row="0" Grid.Column="0" Margin="0,0,5,0" HeaderText="The Team">
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
          </Grid.RowDefinitions>
          <Grid Row="0">
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
              <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.RowSpan="100" Grid.Column="0">
              <Button Width="120" Padding="0" Background="#00FFFFFF" BorderThickness="0" Cursor="Arrow" Style="{StaticResource ButtonNoEffects}" Height="{Binding Path=MattHeadSize, Mode=OneWay}" Click="OnMattHeadClicked">
                <Image RenderOptions.BitmapScalingMode="HighQuality" Source="pack://application:,,,/OnlyRetroRobloxHere;component/Resources/Launcher/TheTeam/MattHead.png" Stretch="Fill" />
              </Button>
              <Image Width="120" Height="134" RenderOptions.BitmapScalingMode="HighQuality" Source="pack://application:,,,/OnlyRetroRobloxHere;component/Resources/Launcher/TheTeam/MattBody.png" />
            </StackPanel>
            <TextBlock Grid.Row="0" Grid.Column="1" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Style="{StaticResource TextBlockWhite}" Text="Matt" TextWrapping="Wrap" />
            <TextBlock Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" FontSize="12" Style="{StaticResource TextBlockWhite}" Text="The guy behind this... I think..." TextWrapping="Wrap" />
          </Grid>
        </Grid>
      </controls:StandardBox>
      <controls:StandardBox Grid.Row="0" Grid.Column="1" Margin="5,0,0,0" HeaderText="About Us">
        <StackPanel>
          <TextBlock Margin="0,0,0,10" Style="{StaticResource TextBlockWhite}" Text="Only Retro Roblox Here provides an easy way to play legacy versions of Roblox with a simple user interface." TextWrapping="Wrap" />
          <TextBlock Margin="0,0,0,10" Style="{StaticResource TextBlockWhite}" Text="This is entirely a passion project." TextWrapping="Wrap" />
          <TextBlock Margin="0,0,0,10" Style="{StaticResource TextBlockWhite}" Text="All microtransactions present in the launcher are jokes. No real world money is involved in ORRH." TextWrapping="Wrap" />
          <TextBlock Margin="0,0,0,10" Style="{StaticResource TextBlockWhite}" Text="I can not guarantee the safety of any clients included. Please play with friends or people you trust!" TextWrapping="Wrap" />
          <TextBlock FontWeight="Bold" Style="{StaticResource TextBlockWhite}" Text="We are not affiliated with Roblox." TextWrapping="Wrap" />
        </StackPanel>
      </controls:StandardBox>
      <controls:StandardBox Grid.Row="1" Grid.Column="1" Margin="5,10,0,0" HeaderText="Build Information">
        <StackPanel>
          <TextBlock Margin="0,0,0,2" Style="{StaticResource TextBlockWhite}" Text="{Binding Path=Version, Converter={StaticResource StringFormatConverter}, ConverterParameter=Version: {0}, Mode=OneTime}" />
          <TextBlock Margin="0,0,0,2" Style="{StaticResource TextBlockWhite}" Text="{Binding Path=BuildTime, Converter={StaticResource StringFormatConverter}, ConverterParameter=Build Time: {0}, Mode=OneTime}" />
          <TextBlock Margin="0" Style="{StaticResource TextBlockWhite}" Text="{Binding Path=BuildMetadata.Configuration, Converter={StaticResource StringFormatConverter}, ConverterParameter=Configuration: {0}, Mode=OneTime}" />
        </StackPanel>
      </controls:StandardBox>
    </Grid>
  </StackPanel>
</local:BasePage>