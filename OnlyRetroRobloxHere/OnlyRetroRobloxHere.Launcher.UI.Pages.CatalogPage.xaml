<?xml version="1.0" encoding="utf-8"?>
<local:BasePage x:Class="OnlyRetroRobloxHere.Launcher.UI.Pages.CatalogPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:controls="clr-namespace:OnlyRetroRobloxHere.Launcher.UI.Controls" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:OnlyRetroRobloxHere.Launcher.UI.Pages" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:viewmodels="clr-namespace:OnlyRetroRobloxHere.Launcher.UI.ViewModels.Pages" Title="CatalogPage" FontFamily="Verdana" TextOptions.TextFormattingMode="Display">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <controls:StandardBox Grid.Row="0" Margin="0,0,0,5" HeaderVisibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="4*" />
                </Grid.ColumnDefinitions>
                <TextBlock VerticalAlignment="Center" FontSize="14" FontWeight="Bold" Style="{StaticResource TextBlockWhite}" Text="Catalog" />
                <TextBox Grid.Column="1" Text="{Binding Path=SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Delay=500}" />
            </Grid>
        </controls:StandardBox>
        <Grid Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid Column="0" Margin="0,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <controls:StandardBox Margin="0,0,0,10" HeaderVisibility="Collapsed">
                    <StackPanel>
                        <controls:SelectableButton x:Name="FeaturedCategoryButton" Click="OnCategoryClicked" Content="Featured" IsSelected="True" Style="{StaticResource BrowseButton}" Tag="Featured" />
                        <controls:SelectableButton x:Name="AllCategoryButton" Click="OnCategoryClicked" Content="All" IsSelected="False" Style="{StaticResource BrowseButton}" Tag="All" />
                        <controls:SelectableButton Click="OnCategoryClicked" Content="Heads" Style="{StaticResource BrowseButton}" Tag="Head" />
                        <controls:SelectableButton Click="OnCategoryClicked" Content="Faces" Style="{StaticResource BrowseButton}" Tag="Face" />
                        <controls:SelectableButton Click="OnCategoryClicked" Content="Gear" Style="{StaticResource BrowseButton}" Tag="Gear" />
                        <controls:SelectableButton Click="OnCategoryClicked" Content="Hats" Style="{StaticResource BrowseButton}" Tag="Hat" />
                        <controls:SelectableButton Click="OnCategoryClicked" Content="T-Shirts" Style="{StaticResource BrowseButton}" Tag="TShirt" />
                        <controls:SelectableButton Click="OnCategoryClicked" Content="Shirts" Style="{StaticResource BrowseButton}" Tag="Shirt" />
                        <controls:SelectableButton Click="OnCategoryClicked" Content="Pants" Style="{StaticResource BrowseButton}" Tag="Pants" />
                        <controls:SelectableButton Click="OnCategoryClicked" Margin="0" Content="Packages" Style="{StaticResource BrowseButton}" Tag="Package" />
                    </StackPanel>
                </controls:StandardBox>
                <controls:StandardBox Grid.Row="1" HeaderVisibility="Collapsed">
                    <StackPanel>
                        <TextBlock Margin="0,0,0,5" FontWeight="Bold" Foreground="#FA0000" Text="LEGEND" />
                        <Image Width="66" Height="19" Margin="0,0,0,2" HorizontalAlignment="Left" RenderOptions.BitmapScalingMode="HighQuality" Source="pack://application:,,,/OnlyRetroRobloxHere;component/Resources/Launcher/Catalog/BCOnly.png" />
                        <TextBlock Margin="0,0,0,5" FontWeight="Bold" Style="{StaticResource TextBlockWhite}" Text="Builders Club Only" />
                        <Image Width="66" Height="13" Margin="0,0,0,2" HorizontalAlignment="Left" RenderOptions.BitmapScalingMode="HighQuality" Source="pack://application:,,,/OnlyRetroRobloxHere;component/Resources/Launcher/Catalog/Limited.png" />
                        <TextBlock Margin="0,0,0,5" FontWeight="Bold" Style="{StaticResource TextBlockWhite}" Text="Limited Items" />
                        <Image Width="87" Height="13" Margin="0,0,0,2" HorizontalAlignment="Left" RenderOptions.BitmapScalingMode="HighQuality" Source="pack://application:,,,/OnlyRetroRobloxHere;component/Resources/Launcher/Catalog/LimitedUnique.png" />
                        <TextBlock FontWeight="Bold" Style="{StaticResource TextBlockWhite}" Text="Limited Unique Items" />
                    </StackPanel>
                </controls:StandardBox>
            </Grid>
            <controls:StandardBox Grid.Column="1" HeaderText="Items">
                <Grid Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid Row="0">
                        <controls:PaginationItemsControl x:Name="CatalogItemsControl" Columns="6" PaginationTextFormat="Page [[[0]]] of [[[1]]]" Rows="3" MainItemsSource="{Binding Path=Items, Mode=OneWay}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Margin="0,1" Padding="0" Background="#00FFFFFF" BorderThickness="0" Style="{StaticResource ButtonNoEffects}" Tag="{Binding Path=Id, Mode=OneWay}" Click="OnItemClicked">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <Border Width="95" Height="95" Padding="2" Background="{StaticResource ItemImageBackground}" BorderBrush="#FF000000" BorderThickness="1" SnapsToDevicePixels="True">
                                                <Border BorderBrush="#FF000000" BorderThickness="1" SnapsToDevicePixels="True">
                                                    <controls:FancyLazyImage Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Top" RenderOptions.BitmapScalingMode="HighQuality" ImagePath="{Binding Path=Image, Mode=OneWay}" />
                                                </Border>
                                            </Border>
                                            <Border Grid.Row="1" Width="95" Height="70" Padding="2" Background="#FF000000" SnapsToDevicePixels="True">
                                                <TextBlock FontSize="10" FontWeight="Bold" Foreground="{DynamicResource Theme.Accent.Highlight}" Style="{StaticResource TextBlockWhite}" TextAlignment="Center" TextWrapping="Wrap" Text="{Binding Path=Name, Mode=OneWay}" />
                                            </Border>
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </controls:PaginationItemsControl>
                    </Grid>
                    <Grid Row="1" HorizontalAlignment="Center" Visibility="{Binding Path=NavigationVisibility, Mode=OneWay}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Button Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Background="#00FFFFFF" BorderThickness="0" FontSize="12" Foreground="{DynamicResource Theme.Accent.Highlight}" Style="{StaticResource ButtonNoEffects}" Command="{Binding ElementName=CatalogItemsControl, Path=PreviousPageCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock VerticalAlignment="Center" FontSize="8" FontWeight="Bold" Text="&lt;" />
                                <TextBlock Margin="-2,0,0,0" VerticalAlignment="Center" FontSize="8" FontWeight="Bold" Text="&lt;" />
                                <TextBlock Text=" Back" />
                            </StackPanel>
                        </Button>
                        <TextBlock Grid.Row="4" Grid.Column="1" Margin="5,0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" Style="{StaticResource TextBlockWhite}" Text="{Binding ElementName=CatalogItemsControl, Path=PaginationText}" />
                        <Button Grid.Row="4" Grid.Column="2" VerticalAlignment="Center" Background="#00FFFFFF" BorderThickness="0" FontSize="12" Foreground="{DynamicResource Theme.Accent.Highlight}" Style="{StaticResource ButtonNoEffects}" Command="{Binding ElementName=CatalogItemsControl, Path=NextPageCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Next " />
                                <TextBlock VerticalAlignment="Center" FontSize="8" FontWeight="Bold" Text="&gt;" />
                                <TextBlock Margin="-2,0,0,0" VerticalAlignment="Center" FontSize="8" FontWeight="Bold" Text="&gt;" />
                            </StackPanel>
                        </Button>
                    </Grid>
                </Grid>
            </controls:StandardBox>
        </Grid>
    </Grid>
</local:BasePage>