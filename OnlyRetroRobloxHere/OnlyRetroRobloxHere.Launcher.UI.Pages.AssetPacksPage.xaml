<?xml version="1.0" encoding="utf-8"?>
<local:BasePage x:Class="OnlyRetroRobloxHere.Launcher.UI.Pages.AssetPacksPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:controls="clr-namespace:OnlyRetroRobloxHere.Launcher.UI.Controls" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:OnlyRetroRobloxHere.Launcher.UI.Pages" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:viewmodels="clr-namespace:OnlyRetroRobloxHere.Launcher.UI.ViewModels.Pages" Title="AssetPacksPage" FontFamily="Verdana" TextOptions.TextFormattingMode="Display">
  <Grid Margin="10">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="1.2*" />
    </Grid.ColumnDefinitions>
    <controls:StandardBox Grid.Column="0" HeaderText="Asset Packs">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="*" />
          <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ListBox Name="AssetPackListBox" ItemsSource="{Binding Path=AssetPacks, Mode=OneWay}" SelectionChanged="OnSelectionChanged" />
        <Button Grid.Row="1" Margin="0,5,0,0" Content="Refresh" Click="OnRefresh" />
      </Grid>
    </controls:StandardBox>
    <controls:StandardBox Grid.Column="1" Margin="5,0,0,0" HeaderText="Asset Pack Information">
      <Grid>
        <Grid Visibility="{Binding Path=NothingSelectedVisibility, Mode=OneWay}">
          <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Style="{StaticResource TextBlockWhite}" Text="Select an asset pack to configure it." TextAlignment="Center" TextWrapping="Wrap" />
        </Grid>
        <StackPanel Visibility="{Binding Path=InfoVisibility, Mode=OneWay}">
          <Grid MaxHeight="58">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Margin="0,0,5,0" Style="{StaticResource TextBlockLightGrey}" Text="Name:" />
            <TextBlock Grid.Column="1" Margin="0,0,5,0" Style="{StaticResource TextBlockWhite}" TextWrapping="Wrap" Text="{Binding Path=Name, Mode=OneWay}" />
          </Grid>
          <Grid MaxHeight="58" Visibility="{Binding Path=VersionVisibility, Mode=OneWay}">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Margin="0,0,5,0" Style="{StaticResource TextBlockLightGrey}" Text="Version:" />
            <TextBlock Grid.Column="1" Margin="0,0,5,0" Style="{StaticResource TextBlockWhite}" TextWrapping="Wrap" Text="{Binding Path=Version, Mode=OneWay}" />
          </Grid>
          <Grid MaxHeight="58" Visibility="{Binding Path=AuthorsVisibility, Mode=OneWay}">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Margin="0,0,5,0" Style="{StaticResource TextBlockLightGrey}" Text="Author(s):" />
            <TextBlock Grid.Column="1" Margin="0,0,5,0" Style="{StaticResource TextBlockWhite}" TextWrapping="Wrap" Text="{Binding Path=Authors, Mode=OneWay}" />
          </Grid>
          <Grid MaxHeight="58">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Margin="0,0,5,0" Style="{StaticResource TextBlockLightGrey}" Text="Client(s):" />
            <TextBlock Grid.Column="1" Margin="0,0,5,0" Style="{StaticResource TextBlockWhite}" TextWrapping="Wrap" Text="{Binding Path=Clients, Mode=OneWay}" />
          </Grid>
          <TextBlock Margin="0,0,5,2" Style="{StaticResource TextBlockLightGrey}" Text="Description:" Visibility="{Binding Path=DescriptionVisibility, Mode=OneWay}" />
          <Border Grid.Column="1" Margin="0,0,5,0" Padding="5" Background="#222222" BorderBrush="#777777" BorderThickness="1" SnapsToDevicePixels="True" Visibility="{Binding Path=DescriptionVisibility, Mode=OneWay}">
            <TextBlock Grid.Column="1" MaxHeight="258" Style="{StaticResource TextBlockWhite}" TextWrapping="Wrap" Text="{Binding Path=Description, Mode=OneWay}" />
          </Border>
        </StackPanel>
        <Grid Column="1" VerticalAlignment="Bottom" Visibility="{Binding Path=InfoVisibility, Mode=OneWay}">
          <StackPanel>
            <TextBlock Margin="5" FontSize="30" Style="{StaticResource TextBlockRed}" Text="This asset pack is disabled!" TextAlignment="Center" Visibility="{Binding Path=DisabledVisibility, Mode=OneWay}" />
            <TextBlock Margin="0,0,0,5" Style="{StaticResource TextBlockWhite}" Text="{Binding Path=FolderText, Mode=OneWay}" />
            <TextBlock Margin="0,0,0,5" Style="{StaticResource TextBlockWhite}" Text="{Binding Path=ApiText, Mode=OneWay}" />
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
              </Grid.ColumnDefinitions>
              <Button Grid.Column="0" Margin="0,0,3,0" Content="Open Folder" Click="OnOpenFolder" />
              <Button Grid.Column="1" Margin="3,0,0,0" Content="Toggle" Click="OnToggle" />
            </Grid>
          </StackPanel>
        </Grid>
      </Grid>
    </controls:StandardBox>
  </Grid>
</local:BasePage>