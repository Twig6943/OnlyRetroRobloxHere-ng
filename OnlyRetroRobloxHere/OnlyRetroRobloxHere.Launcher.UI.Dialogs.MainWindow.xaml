<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="OnlyRetroRobloxHere.Launcher.UI.Dialogs.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:controls="clr-namespace:OnlyRetroRobloxHere.Launcher.UI.Controls" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:OnlyRetroRobloxHere.Launcher.UI.Dialogs" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:viewmodels="clr-namespace:OnlyRetroRobloxHere.Launcher.UI.ViewModels.Dialogs" Title="Only Retro Roblox Here" Width="1000" Height="730" FontFamily="Verdana" ResizeMode="CanMinimize" TextOptions.TextFormattingMode="Display" Closing="Window_Closing">
  <FrameworkElement.Resources>
    <ResourceDictionary>
      <Style x:Key="{x:Type Separator}" TargetType="{x:Type Separator}">
        <Setter Property="Background" Value="#FFFFFFFF" />
        <Setter Property="Margin" Value="5,0,5,0" />
        <Setter Property="Focusable" Value="false" />
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="{x:Type Separator}">
              <Border Height="1" Background="{TemplateBinding Control.Background}" BorderBrush="{TemplateBinding Control.BorderBrush}" BorderThickness="{TemplateBinding Control.BorderThickness}" SnapsToDevicePixels="true" />
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>
    </ResourceDictionary>
  </FrameworkElement.Resources>
  <Grid Background="#424A4F">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Border Grid.Column="0" Width="103" BorderBrush="#FF000000" BorderThickness="0,0,3,0">
      <Border.Background>
                <ImageBrush ImageSource="pack://application:,,,/OnlyRetroRobloxHere;component/Resources/Launcher/Carbon.png" TileMode="Tile" Viewport="0,0,10,10" ViewportUnits="Absolute" />
      </Border.Background>
      <Grid>
        <StackPanel VerticalAlignment="Center">
          <Border Height="10" SnapsToDevicePixels="True" UseLayoutRounding="True">
            <Border.Background>
              <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Offset="1" Color="#424A4F" />
                <GradientStop Offset="0.5" Color="#0A424A4F" />
                <GradientStop Offset="0" Color="#00424A4F" />
              </LinearGradientBrush>
            </Border.Background>
          </Border>
          <Image Width="100" Height="100" VerticalAlignment="Top" RenderOptions.BitmapScalingMode="HighQuality" SnapsToDevicePixels="True" UseLayoutRounding="True" Source="{Binding Path=BannerSource, Mode=OneTime}" />
          <StackPanel Margin="0,-1,0,0" Background="#477594" SnapsToDevicePixels="True" UseLayoutRounding="True">
            <controls:SelectableButton x:Name="PlayNavigationButton" Click="OnNavigationButtonClick" Content="Play" Style="{StaticResource RightNavigationButton}" Tag="Play" />
            <Separator />
            <controls:SelectableButton Click="OnNavigationButtonClick" Content="Host" Style="{StaticResource RightNavigationButton}" Tag="Host" />
            <Separator />
            <controls:SelectableButton x:Name="CharacterNavigationButton" Click="OnNavigationButtonClick" Content="Character" Style="{StaticResource RightNavigationButton}" Tag="Customization" />
            <Separator />
            <controls:SelectableButton x:Name="CatalogNavigationButton" Click="OnNavigationButtonClick" Content="Catalog" Style="{StaticResource RightNavigationButton}" Tag="Catalog" />
            <Separator />
            <controls:SelectableButton Click="OnNavigationButtonClick" Content="Membership" Style="{StaticResource RightNavigationButton}" Tag="Membership" />
            <Separator />
            <controls:SelectableButton x:Name="InventoryNavigationButton" Click="OnNavigationButtonClick" Content="Inventory" Style="{StaticResource RightNavigationButton}" Tag="Inventory" />
            <Separator />
            <controls:SelectableButton Click="OnNavigationButtonClick" Content="Asset Packs" Style="{StaticResource RightNavigationButton}" Tag="AssetPacks" />
            <Separator />
            <controls:SelectableButton Click="OnNavigationButtonClick" Content="Settings" Style="{StaticResource RightNavigationButton}" Tag="Settings" />
            <Separator />
            <controls:SelectableButton Click="OnNavigationButtonClick" BorderThickness="0" Content="About" Style="{StaticResource RightNavigationButton}" Tag="About" />
          </StackPanel>
          <Border Height="10" SnapsToDevicePixels="True" UseLayoutRounding="True">
            <Border.Background>
              <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Offset="0" Color="#477594" />
                <GradientStop Offset="0.5" Color="#0A477594" />
                <GradientStop Offset="1" Color="#00477594" />
              </LinearGradientBrush>
            </Border.Background>
          </Border>
        </StackPanel>
        <StackPanel Margin="5" VerticalAlignment="Bottom">
          <TextBlock Style="{StaticResource TextBlockWhite}" Text="{Binding Path=DebugText, Mode=OneTime}" Visibility="{Binding Path=DebugTextVisibility, Mode=OneTime}" />
          <TextBlock Style="{StaticResource TextBlockWhite}" Text="{Binding Path=Version, Mode=OneTime}" />
        </StackPanel>
      </Grid>
    </Border>
    <Frame Name="NavigationFrame" Grid.Column="1" ClipToBounds="True" NavigationUIVisibility="Hidden" Source="" />
  </Grid>
</Window>