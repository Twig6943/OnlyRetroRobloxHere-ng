<?xml version="1.0" encoding="utf-8"?>
<pages:BasePage x:Class="OnlyRetroRobloxHere.Launcher.UI.Pages.SettingsPages.TTSSettingsPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:OnlyRetroRobloxHere.Launcher.UI.Pages.SettingsPages" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:pages="clr-namespace:OnlyRetroRobloxHere.Launcher.UI.Pages" xmlns:viewmodels="clr-namespace:OnlyRetroRobloxHere.Launcher.UI.ViewModels.Pages.SettingsPages" Title="TTSSettingsPage" Background="#00FFFFFF" FontFamily="Verdana" TextOptions.TextFormattingMode="Display">
  <Grid Margin="10">
    <StackPanel Visibility="{Binding Path=TTSCustomisationVisibility, Mode=OneTime}">
      <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
        <CheckBox Margin="0,0,5,0" Content="Enabled" IsChecked="{Binding Path=TTSEnabled, Mode=TwoWay}" />
        <Image Height="14" RenderOptions.BitmapScalingMode="HighQuality" Source="pack://application:,,,/OnlyRetroRobloxHere;component/Resources/Launcher/Help.png" ToolTip="Let the shenanigans begin!" />
      </StackPanel>
      <StackPanel Margin="0,0,0,2" Orientation="Horizontal">
        <TextBlock Margin="0,0,5,0" Style="{StaticResource TextBlockWhite}" Text="Engine" />
        <Image Height="14" RenderOptions.BitmapScalingMode="HighQuality" Source="pack://application:,,,/OnlyRetroRobloxHere;component/Resources/Launcher/Help.png" ToolTip="TTS Engine to use." />
      </StackPanel>
      <ComboBox Width="150" Margin="0,0,0,5" HorizontalAlignment="Left" ItemsSource="{Binding Path=TTSEngines, Mode=OneTime}" SelectedItem="{Binding Path=TTSEngine, Mode=TwoWay}" SelectionChanged="OnTTSEngineComboBoxSelectionChanged">
        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <TextBlock Text="{Binding Converter={StaticResource EnumToDescriptionConverter}}" />
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ComboBox>
      <StackPanel Margin="0,0,0,2" Orientation="Horizontal">
        <TextBlock Margin="0,0,5,0" Style="{StaticResource TextBlockWhite}" Text="Voice" />
        <Image Height="14" RenderOptions.BitmapScalingMode="HighQuality" Source="pack://application:,,,/OnlyRetroRobloxHere;component/Resources/Launcher/Help.png" ToolTip="Who should scream at you?" />
      </StackPanel>
      <ComboBox Width="400" Margin="0,0,0,0" HorizontalAlignment="Left" ItemsSource="{Binding Path=TTSVoices, Mode=OneTime}" SelectedItem="{Binding Path=TTSVoice, Mode=TwoWay}" />
    </StackPanel>
    <TextBlock HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" Style="{StaticResource TextBlockRed}" Text="{Binding Path=TTSError, Mode=OneTime}" Visibility="{Binding Path=TTSErrorVisibility, Mode=OneTime}" />
  </Grid>
</pages:BasePage>